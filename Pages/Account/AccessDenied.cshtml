@page
@model EagleConnect.Pages.Account.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white text-center">
                    <h3>Access Denied</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                    <h4>You don't have permission to access this resource.</h4>
                    <p class="text-muted">Please contact an administrator if you believe this is an error.</p>
                    <div class="mt-4">
                        <a asp-page="/Index" class="btn btn-primary">Go Home</a>
                        <a asp-page="/Account/Login" class="btn btn-outline-primary">Sign In</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
