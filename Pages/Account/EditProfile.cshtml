@page
@model EagleConnect.Pages.Account.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .profile-card {
        border-radius: 16px;
        border: none;
        box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    }
    .profile-header {
        background: linear-gradient(135deg, #002856 0%, #001a3d 100%);
        border-radius: 16px 16px 0 0;
        padding: 1.5rem;
    }
    .skill-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        border-radius: 24px;
        background: #f8f9fa;
        border: 1px solid #e9ecef;
        margin: 0.25rem;
        transition: all 0.2s;
    }
    .skill-badge:hover {
        background: #e9ecef;
    }
    .skill-badge .remove-btn {
        background: none;
        border: none;
        color: #dc3545;
        padding: 0;
        margin-left: 0.5rem;
        cursor: pointer;
        opacity: 0.7;
        transition: opacity 0.2s;
    }
    .skill-badge .remove-btn:hover {
        opacity: 1;
    }
    .proficiency-beginner { border-left: 3px solid #6c757d; }
    .proficiency-intermediate { border-left: 3px solid #0d6efd; }
    .proficiency-advanced { border-left: 3px solid #198754; }
    .proficiency-expert { border-left: 3px solid #ffc107; }
    .add-skill-card {
        border: 2px dashed #dee2e6;
        border-radius: 12px;
        transition: all 0.2s;
    }
    .add-skill-card:hover {
        border-color: #002856;
        background: #f8f9fa;
    }
</style>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Main Profile Form -->
            <div class="card profile-card mb-4">
                <div class="profile-header">
                    <h3 class="text-white mb-0"><i class="fas fa-user-edit me-2"></i>Edit Profile</h3>
                </div>
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        <!-- Profile Image Section -->
                        <div class="row mb-4">
                            <div class="col-md-3 text-center">
                                <div class="mb-3">
                                    @if (!string.IsNullOrEmpty(Model.CurrentUser?.ProfileImage) && Model.CurrentUser.ProfileImage != "/images/default-avatar.svg")
                                    {
                                        <img src="@Model.CurrentUser.ProfileImage" alt="Profile" class="rounded-circle shadow" style="width: 120px; height: 120px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center shadow" style="width: 120px; height: 120px;">
                                            <i class="fas fa-user fa-3x text-white"></i>
                                        </div>
                                    }
                                </div>
                                <input type="file" asp-for="Input.ProfileImageFile" accept=".png,.jpg,.jpeg" class="form-control form-control-sm" />
                                <small class="text-muted">PNG, JPG, JPEG (max 5MB)</small>
                                <span asp-validation-for="Input.ProfileImageFile" class="text-danger d-block"></span>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.FirstName" class="form-label fw-semibold">First Name *</label>
                                        <input asp-for="Input.FirstName" class="form-control" />
                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.LastName" class="form-label fw-semibold">Last Name *</label>
                                        <input asp-for="Input.LastName" class="form-control" />
                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label fw-semibold">Email *</label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Professional Info -->
                        <h5 class="mb-3"><i class="fas fa-briefcase me-2 text-primary"></i>Professional Information</h5>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.Company" class="form-label">Company</label>
                                <input asp-for="Input.Company" class="form-control" placeholder="e.g., Google, Microsoft" />
                                <span asp-validation-for="Input.Company" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.JobTitle" class="form-label">Job Title</label>
                                <input asp-for="Input.JobTitle" class="form-control" placeholder="e.g., Software Engineer" />
                                <span asp-validation-for="Input.JobTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.GraduationYear" class="form-label">Graduation Year</label>
                                <input asp-for="Input.GraduationYear" class="form-control" type="number" min="1900" max="@(DateTime.Now.Year + 10)" placeholder="e.g., 2024" />
                                <small class="form-text text-muted">Leave empty if not applicable</small>
                                <span asp-validation-for="Input.GraduationYear" class="text-danger"></span>
                            </div>
                        </div>

                        <hr class="my-4">

                        <!-- Bio -->
                        <h5 class="mb-3"><i class="fas fa-user-circle me-2 text-primary"></i>About Me</h5>
                        <div class="mb-4">
                            <label asp-for="Input.Bio" class="form-label">Bio</label>
                            <textarea asp-for="Input.Bio" class="form-control" rows="4" placeholder="Tell us about yourself, your interests, and what you're looking for..."></textarea>
                            <small class="text-muted">Max 500 characters</small>
                            <span asp-validation-for="Input.Bio" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a asp-page="/Account/Profile" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Skills Section -->
            <div class="card profile-card">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-tags me-2 text-primary"></i>My Skills</h5>
                </div>
                <div class="card-body p-4">
                    <!-- Current Skills -->
                    <div class="mb-4">
                        <h6 class="text-muted mb-3">Your Skills (@Model.UserSkills.Count)</h6>
                        @if (Model.UserSkills.Any())
                        {
                            <div class="d-flex flex-wrap">
                                @foreach (var userSkill in Model.UserSkills)
                                {
                                    var proficiencyClass = userSkill.ProficiencyLevel?.ToLower() switch
                                    {
                                        "beginner" => "proficiency-beginner",
                                        "intermediate" => "proficiency-intermediate",
                                        "advanced" => "proficiency-advanced",
                                        "expert" => "proficiency-expert",
                                        _ => "proficiency-beginner"
                                    };
                                    
                                    var categoryIcon = userSkill.Skill?.Category switch
                                    {
                                        EagleConnect.Models.SkillCategory.Technical => "fas fa-code",
                                        EagleConnect.Models.SkillCategory.Academic => "fas fa-graduation-cap",
                                        EagleConnect.Models.SkillCategory.Soft => "fas fa-users",
                                        EagleConnect.Models.SkillCategory.Professional => "fas fa-briefcase",
                                        EagleConnect.Models.SkillCategory.Certification => "fas fa-certificate",
                                        EagleConnect.Models.SkillCategory.Language => "fas fa-language",
                                        _ => "fas fa-star"
                                    };
                                    
                                    <div class="skill-badge @proficiencyClass">
                                        <i class="@categoryIcon me-2 text-primary"></i>
                                        <span class="fw-semibold">@userSkill.Skill?.Name</span>
                                        <span class="badge bg-light text-dark ms-2">@userSkill.ProficiencyLevel</span>
                                        <form method="post" asp-page-handler="RemoveSkill" class="d-inline">
                                            <input type="hidden" name="skillId" value="@userSkill.SkillId" />
                                            <button type="submit" class="remove-btn" title="Remove skill" onclick="return confirm('Remove this skill?');">
                                                <i class="fas fa-times-circle"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-muted text-center py-3">
                                <i class="fas fa-info-circle me-1"></i>You haven't added any skills yet.
                            </div>
                        }
                    </div>

                    <!-- Add New Skill -->
                    <div class="add-skill-card p-4">
                        <h6 class="mb-3"><i class="fas fa-plus-circle me-2 text-success"></i>Add New Skill</h6>
                        @if (Model.AvailableSkills.Any())
                        {
                            <form method="post" asp-page-handler="AddSkill">
                                <div class="row g-3 align-items-end">
                                    <div class="col-md-5">
                                        <label class="form-label">Skill</label>
                                        <select name="skillId" class="form-select" required>
                                            <option value="">-- Select a Skill --</option>
                                            @foreach (var category in Model.AvailableSkills.GroupBy(s => s.Category).OrderBy(g => g.Key))
                                            {
                                                <optgroup label="@category.Key">
                                                    @foreach (var skill in category.OrderBy(s => s.Name))
                                                    {
                                                        <option value="@skill.Id">@skill.Name</option>
                                                    }
                                                </optgroup>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Proficiency Level</label>
                                        <select name="proficiencyLevel" class="form-select" required>
                                            <option value="Beginner">Beginner</option>
                                            <option value="Intermediate">Intermediate</option>
                                            <option value="Advanced">Advanced</option>
                                            <option value="Expert">Expert</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <button type="submit" class="btn btn-success w-100">
                                            <i class="fas fa-plus me-1"></i>Add Skill
                                        </button>
                                    </div>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="text-muted text-center py-2">
                                <i class="fas fa-check-circle me-1 text-success"></i>You've added all available skills!
                            </div>
                        }
                    </div>

                    <!-- Skill Legend -->
                    <div class="mt-4 pt-3 border-top">
                        <small class="text-muted">
                            <strong>Proficiency Levels:</strong>
                            <span class="ms-2 px-2 py-1 bg-light rounded proficiency-beginner">Beginner</span>
                            <span class="ms-2 px-2 py-1 bg-light rounded proficiency-intermediate">Intermediate</span>
                            <span class="ms-2 px-2 py-1 bg-light rounded proficiency-advanced">Advanced</span>
                            <span class="ms-2 px-2 py-1 bg-light rounded proficiency-expert">Expert</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
