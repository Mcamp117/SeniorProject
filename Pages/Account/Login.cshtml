@page
@model EagleConnect.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Pages/Shared/_PublicLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="text-center mb-4">
                <span style="font-size: 3rem;">ðŸ¦…</span>
                <h2 class="fw-bold text-navy mt-2">Welcome Back!</h2>
                <p class="text-muted">Sign in to your EagleConnect account</p>
            </div>
            
            <div class="card border-0 shadow-lg">
                <div class="card-body p-4 p-md-5">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                        </div>
                    }

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope text-muted me-1"></i> Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="you@usi.edu" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Input.Password" class="form-label">
                                <i class="fas fa-lock text-muted me-1"></i> Password
                            </label>
                            <input asp-for="Input.Password" class="form-control form-control-lg" placeholder="Enter your password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="Input.RememberMe" class="form-check-input" />
                                <label asp-for="Input.RememberMe" class="form-check-label small">
                                    Remember me
                                </label>
                            </div>
                            <a asp-page="/Account/ForgotPassword" class="small text-decoration-none">Forgot password?</a>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i> Sign In
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center">
                        <span class="text-muted">Don't have an account?</span>
                        <a asp-page="/Account/Register" class="fw-semibold text-decoration-none ms-1">Create one</a>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="fas fa-shield-alt me-1"></i> Your information is secure with USI
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
