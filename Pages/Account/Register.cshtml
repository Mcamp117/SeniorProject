@page
@model EagleConnect.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "~/Pages/Shared/_PublicLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center mb-4">
                <span style="font-size: 3rem;">ü¶Ö</span>
                <h2 class="fw-bold text-navy mt-2">Join EagleConnect</h2>
                <p class="text-muted">Create your account and start connecting</p>
            </div>
            
            <div class="card border-0 shadow-lg">
                <div class="card-header text-white py-4" style="background: linear-gradient(135deg, var(--usi-navy) 0%, var(--usi-navy-light) 100%);">
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="step-indicator @(Model.CurrentStep == 1 ? "active" : "completed")">
                            <span class="step-number">
                                @if (Model.CurrentStep > 1)
                                {
                                    <i class="fas fa-check"></i>
                                }
                                else
                                {
                                    <span>1</span>
                                }
                            </span>
                            <span class="step-label">Basic Info</span>
                        </div>
                        <div class="step-line @(Model.CurrentStep >= 2 ? "active" : "")"></div>
                        <div class="step-indicator @(Model.CurrentStep == 2 ? "active" : "")">
                            <span class="step-number">2</span>
                            <span class="step-label">Complete Profile</span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form method="post" id="registerForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        @* Step 1: Basic Information *@
                        <div id="step1" style="display: @(Model.CurrentStep == 1 ? "block" : "none");">
                            <h5 class="fw-bold text-navy mb-4">
                                <i class="fas fa-user-plus text-gold me-2"></i> Let's get started
                            </h5>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.FirstName" class="form-label">
                                        <i class="fas fa-user text-muted me-1"></i> First Name
                                    </label>
                                    <input asp-for="Input.FirstName" class="form-control form-control-lg" placeholder="John" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.LastName" class="form-label">
                                        <i class="fas fa-user text-muted me-1"></i> Last Name
                                    </label>
                                    <input asp-for="Input.LastName" class="form-control form-control-lg" placeholder="Doe" />
                                    <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="fas fa-envelope text-muted me-1"></i> Email Address
                                </label>
                                <input asp-for="Input.Email" class="form-control form-control-lg" type="email" placeholder="you@usi.edu" />
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.Password" class="form-label">
                                        <i class="fas fa-lock text-muted me-1"></i> Password
                                    </label>
                                    <input asp-for="Input.Password" class="form-control form-control-lg" type="password" placeholder="Create a strong password" />
                                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="Input.ConfirmPassword" class="form-label">
                                        <i class="fas fa-lock text-muted me-1"></i> Confirm Password
                                    </label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" type="password" placeholder="Confirm your password" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Input.UserType" class="form-label">
                                    <i class="fas fa-users text-muted me-1"></i> I am a
                                </label>
                                <select asp-for="Input.UserType" class="form-select form-select-lg" id="userTypeSelect">
                                    <option value="Student">üéì Student</option>
                                    <option value="Alumni">ü¶Ö Alumni</option>
                                    <option value="Faculty">üë®‚Äçüè´ Faculty</option>
                                    <option value="External">üíº External Mentor</option>
                                </select>
                                <span asp-validation-for="Input.UserType" class="text-danger small"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" name="action" value="next" class="btn btn-primary btn-lg">
                                    Continue <i class="fas fa-arrow-right ms-2"></i>
                                </button>
                            </div>
                        </div>

                        @* Step 2: Type-Specific Information *@
                        <div id="step2" style="display: @(Model.CurrentStep == 2 ? "block" : "none");">
                            <h5 class="fw-bold text-navy mb-4">
                                <i class="fas fa-id-card text-gold me-2"></i> Complete your profile
                            </h5>
                            
                            @* Alumni Fields *@
                            <div id="alumniFields" style="display: none;">
                                <div class="alert alert-info border-0" style="background: var(--usi-light-blue-soft);">
                                    <i class="fas fa-graduation-cap me-2 text-navy"></i>
                                    <strong class="text-navy">Welcome back, Eagle!</strong> Tell us about your journey since graduation.
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Input.GraduationYear" class="form-label">
                                        <i class="fas fa-calendar text-muted me-1"></i> Graduation Year <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Input.GraduationYear" class="form-control form-control-lg" type="number" min="1900" max="@(DateTime.Now.Year + 10)" placeholder="e.g., 2020" />
                                    <span asp-validation-for="Input.GraduationYear" class="text-danger small"></span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.Company" class="form-label">
                                            <i class="fas fa-building text-muted me-1"></i> Company
                                        </label>
                                        <input asp-for="Input.Company" class="form-control form-control-lg" placeholder="Where do you work?" />
                                        <span asp-validation-for="Input.Company" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.JobTitle" class="form-label">
                                            <i class="fas fa-briefcase text-muted me-1"></i> Job Title
                                        </label>
                                        <input asp-for="Input.JobTitle" class="form-control form-control-lg" placeholder="What's your role?" />
                                        <span asp-validation-for="Input.JobTitle" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            @* Student Fields *@
                            <div id="studentFields" style="display: none;">
                                <div class="alert border-0" style="background: linear-gradient(135deg, var(--usi-light-blue-soft) 0%, #e8f4f8 100%);">
                                    <i class="fas fa-info-circle me-2 text-navy"></i>
                                    <span class="text-navy">You can add more details like your major, expected graduation year, and skills after registration.</span>
                                </div>
                            </div>

                            @* Faculty Fields *@
                            <div id="facultyFields" style="display: none;">
                                <div class="alert border-0" style="background: linear-gradient(135deg, rgba(252, 182, 67, 0.15) 0%, rgba(252, 182, 67, 0.08) 100%);">
                                    <i class="fas fa-university me-2 text-navy"></i>
                                    <span class="text-navy">Your organization is automatically set to <strong>USI</strong>.</span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">
                                            <i class="fas fa-building text-muted me-1"></i> Department
                                        </label>
                                        <input type="text" class="form-control form-control-lg" value="University of Southern Indiana" disabled style="background: var(--usi-gray-light);" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.JobTitle" class="form-label">
                                            <i class="fas fa-id-badge text-muted me-1"></i> Title
                                        </label>
                                        <input asp-for="Input.JobTitle" class="form-control form-control-lg" placeholder="e.g., Professor, Associate Professor" />
                                        <span asp-validation-for="Input.JobTitle" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            @* External Fields *@
                            <div id="externalFields" style="display: none;">
                                <div class="alert border-0" style="background: linear-gradient(135deg, var(--usi-light-blue-soft) 0%, #e8f4f8 100%);">
                                    <i class="fas fa-handshake me-2 text-navy"></i>
                                    <span class="text-navy">Thank you for joining as an external mentor! Tell us about your professional background.</span>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.Company" class="form-label">
                                            <i class="fas fa-building text-muted me-1"></i> Company
                                        </label>
                                        <input asp-for="Input.Company" class="form-control form-control-lg" placeholder="Your organization" />
                                        <span asp-validation-for="Input.Company" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Input.JobTitle" class="form-label">
                                            <i class="fas fa-briefcase text-muted me-1"></i> Job Title
                                        </label>
                                        <input asp-for="Input.JobTitle" class="form-control form-control-lg" placeholder="Your current role" />
                                        <span asp-validation-for="Input.JobTitle" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <button type="button" class="btn btn-outline-secondary btn-lg px-4" onclick="goToStep(1)">
                                    <i class="fas fa-arrow-left me-2"></i> Back
                                </button>
                                <button type="submit" name="action" value="" class="btn btn-gold btn-lg px-4">
                                    <i class="fas fa-check me-2"></i> Create Account
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3" style="background: var(--usi-gray-light);">
                    <span class="text-muted">Already have an account?</span>
                    <a asp-page="/Account/Login" class="fw-semibold text-decoration-none ms-1">Sign in</a>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="fas fa-shield-alt me-1"></i> Your information is secure with USI
                </small>
            </div>
        </div>
    </div>
</div>

<style>
    .step-indicator {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
    }
    .step-number {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.2);
        color: rgba(255, 255, 255, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        margin-bottom: 8px;
        transition: all 0.3s ease;
    }
    .step-indicator.active .step-number {
        background-color: var(--usi-gold);
        color: var(--usi-navy);
        box-shadow: 0 4px 15px rgba(252, 182, 67, 0.4);
    }
    .step-indicator.completed .step-number {
        background-color: #198754;
        color: white;
    }
    .step-label {
        font-size: 0.85rem;
        color: rgba(255, 255, 255, 0.7);
        font-weight: 500;
    }
    .step-indicator.active .step-label,
    .step-indicator.completed .step-label {
        color: white;
    }
    .step-line {
        width: 80px;
        height: 3px;
        background-color: rgba(255, 255, 255, 0.2);
        margin: 0 15px;
        margin-top: 22px;
        border-radius: 2px;
        transition: all 0.3s ease;
    }
    .step-line.active {
        background-color: var(--usi-gold);
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userTypeSelect = document.getElementById('userTypeSelect');
            const userType = '@Model.Input.UserType';
            
            if (userType) {
                userTypeSelect.value = userType;
            }
            
            function showFieldsForUserType() {
                const selectedType = userTypeSelect.value;
                
                document.getElementById('alumniFields').style.display = 'none';
                document.getElementById('studentFields').style.display = 'none';
                document.getElementById('facultyFields').style.display = 'none';
                document.getElementById('externalFields').style.display = 'none';
                
                switch(selectedType) {
                    case 'Alumni':
                        document.getElementById('alumniFields').style.display = 'block';
                        break;
                    case 'Student':
                        document.getElementById('studentFields').style.display = 'block';
                        break;
                    case 'Faculty':
                        document.getElementById('facultyFields').style.display = 'block';
                        break;
                    case 'External':
                        document.getElementById('externalFields').style.display = 'block';
                        break;
                }
            }
            
            if (@Model.CurrentStep == 2) {
                if (!userType || userType === '') {
                    userTypeSelect.value = 'Student';
                }
                showFieldsForUserType();
            }
            
            userTypeSelect.addEventListener('change', showFieldsForUserType);
        });
        
        function goToStep(step) {
            const form = document.getElementById('registerForm');
            const backForm = document.createElement('form');
            backForm.method = 'get';
            backForm.action = window.location.pathname;
            
            const stepInput = document.createElement('input');
            stepInput.type = 'hidden';
            stepInput.name = 'step';
            stepInput.value = step;
            backForm.appendChild(stepInput);
            
            const inputs = form.querySelectorAll('input:not([type="password"]), select');
            inputs.forEach(inp => {
                if (inp.name && inp.name.startsWith('Input.') && inp.value) {
                    const hidden = document.createElement('input');
                    hidden.type = 'hidden';
                    hidden.name = inp.name;
                    hidden.value = inp.value;
                    backForm.appendChild(hidden);
                }
            });
            
            document.body.appendChild(backForm);
            backForm.submit();
        }
    </script>
}
