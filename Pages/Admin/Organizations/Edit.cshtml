@page "{id:int}"
@model EagleConnect.Pages.Admin.Organizations.EditModel
@{
    ViewData["Title"] = "Edit Organization";
    Layout = "/Pages/Admin/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4><i class="fas fa-edit me-2"></i>Edit Organization: @Model.Organization.Name</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Organization.Name" class="form-label">Name *</label>
                            <input asp-for="Organization.Name" class="form-control" />
                            <span asp-validation-for="Organization.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Organization.Description" class="form-label">Description</label>
                            <textarea asp-for="Organization.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Organization.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Organization.Category" class="form-label">Category</label>
                            <input asp-for="Organization.Category" class="form-control" placeholder="e.g., Academic, Social, Professional" />
                            <span asp-validation-for="Organization.Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SelectedModeratorId" class="form-label">
                                <i class="fas fa-shield-alt me-1 text-warning"></i>Moderator
                            </label>
                            @if (!string.IsNullOrEmpty(Model.CurrentModeratorName))
                            {
                                <div class="mb-2">
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-user me-1"></i>Current: @Model.CurrentModeratorName
                                    </span>
                                </div>
                            }
                            <select asp-for="SelectedModeratorId" asp-items="@Model.UserList" class="form-select">
                                <option value="">-- No Moderator --</option>
                            </select>
                            <small class="text-muted">The moderator can manage membership requests, create posts, and manage members.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Organization.ContactEmail" class="form-label">Contact Email</label>
                            <input asp-for="Organization.ContactEmail" class="form-control" type="email" />
                            <span asp-validation-for="Organization.ContactEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Organization.Website" class="form-label">Website</label>
                            <input asp-for="Organization.Website" class="form-control" placeholder="https://" />
                            <span asp-validation-for="Organization.Website" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Organization.MeetingSchedule" class="form-label">Meeting Schedule</label>
                            <input asp-for="Organization.MeetingSchedule" class="form-control" placeholder="e.g., Wednesdays at 5:00 PM" />
                            <span asp-validation-for="Organization.MeetingSchedule" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Organization.Location" class="form-label">Location</label>
                            <input asp-for="Organization.Location" class="form-control" placeholder="e.g., UC East, Room 201" />
                            <span asp-validation-for="Organization.Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Organization.IsActive" class="form-check-input" />
                            <label asp-for="Organization.IsActive" class="form-check-label">
                                Active Organization
                            </label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

