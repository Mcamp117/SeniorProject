@page
@model EagleConnect.Pages.Admin.Organizations.IndexModel
@{
    ViewData["Title"] = "Organizations Management";
    Layout = "/Pages/Admin/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-building me-2"></i>Student Organizations Management</h2>
                <a asp-page="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Add New Organization
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Moderator</th>
                                    <th>Members</th>
                                    <th>Pending Requests</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var org in Model.Organizations)
                                {
                                    var pendingCount = org.MembershipRequests?.Count(r => r.Status == EagleConnect.Models.MembershipRequestStatus.Pending) ?? 0;
                                    <tr>
                                        <td>
                                            <strong>@org.Name</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@org.Category</span>
                                        </td>
                                        <td>
                                            @if (org.Moderator != null)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="fas fa-shield-alt me-1"></i>@org.Moderator.FirstName @org.Moderator.LastName
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">Not assigned</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@org.Members.Count(m => m.IsActive)</span>
                                        </td>
                                        <td>
                                            @if (pendingCount > 0)
                                            {
                                                <span class="badge bg-warning text-dark">@pendingCount pending</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">0</span>
                                            }
                                        </td>
                                        <td>
                                            @if (org.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>@org.CreatedDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a asp-page="Edit" asp-route-id="@org.Id" class="btn btn-outline-primary" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-page="/Organizations/Manage" asp-route-id="@org.Id" class="btn btn-outline-info" title="Manage">
                                                    <i class="fas fa-cog"></i>
                                                </a>
                                                <form method="post" asp-page-handler="ToggleActive" asp-route-id="@org.Id" class="d-inline">
                                                    <button type="submit" class="btn @(org.IsActive ? "btn-outline-warning" : "btn-outline-success")" 
                                                            title="@(org.IsActive ? "Deactivate" : "Activate")">
                                                        <i class="fas @(org.IsActive ? "fa-toggle-off" : "fa-toggle-on")"></i>
                                                    </button>
                                                </form>
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@org.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-danger" title="Delete"
                                                            onclick="return confirm('Are you sure you want to delete this organization? This action cannot be undone.')">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    
                    @if (!Model.Organizations.Any())
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="fas fa-inbox fa-3x mb-3"></i>
                            <p>No organizations found.</p>
                            <a asp-page="Create" class="btn btn-primary">Create First Organization</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
