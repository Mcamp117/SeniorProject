@page
@model EagleConnect.Pages.Admin.Organizations.IndexModel
@{
    ViewData["Title"] = "Organizations Management";
    Layout = "/Pages/Admin/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Student Organizations Management</h2>
                <a asp-page="Create" class="btn btn-primary">Add New Organization</a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Category</th>
                                    <th>Contact Email</th>
                                    <th>Members</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var org in Model.Organizations)
                                {
                                    <tr>
                                        <td>@org.Name</td>
                                        <td>@org.Category</td>
                                        <td>@org.ContactEmail</td>
                                        <td>@org.Members.Count(m => m.IsActive)</td>
                                        <td>
                                            @if (org.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>@org.CreatedDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <a asp-page="Edit" asp-route-id="@org.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <form method="post" asp-page-handler="ToggleActive" asp-route-id="@org.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm @(org.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                                    @(org.IsActive ? "Deactivate" : "Activate")
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@org.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Are you sure you want to delete this organization?')">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

