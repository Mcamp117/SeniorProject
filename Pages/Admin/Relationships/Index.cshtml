@page
@model EagleConnect.Pages.Admin.Relationships.IndexModel
@{
    ViewData["Title"] = "Relationships Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Relationships</h2>
                <a asp-page="Create" class="btn btn-primary">Create Relationship</a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>MentorId</th>
                                    <th>MenteeId</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th>Started</th>
                                    <th>Ended</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var r in Model.Items)
                                {
                                    <tr>
                                        <td>@r.MentorId</td>
                                        <td>@r.MenteeId</td>
                                        <td>@r.Type</td>
                                        <td>@r.Status</td>
                                        <td>@(r.StartedDate?.ToString("MMM dd, yyyy") ?? "-")</td>
                                        <td>@(r.EndedDate?.ToString("MMM dd, yyyy") ?? "-")</td>
                                        <td>
                                            <a asp-page="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                            <form method="post" asp-page-handler="Delete" asp-route-id="@r.Id" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this relationship?')">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

