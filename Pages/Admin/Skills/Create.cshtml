@page
@model EagleConnect.Pages.Admin.Skills.CreateModel
@{
    ViewData["Title"] = "Create Skill";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4>Create New Skill</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Skill.Name" class="form-label"></label>
                            <input asp-for="Skill.Name" class="form-control" />
                            <span asp-validation-for="Skill.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Skill.Description" class="form-label"></label>
                            <textarea asp-for="Skill.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Skill.Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Skill.Category" class="form-label"></label>
                            <select asp-for="Skill.Category" class="form-select">
                                <option value="@EagleConnect.Models.SkillCategory.Academic">Academic</option>
                                <option value="@EagleConnect.Models.SkillCategory.Technical">Technical</option>
                                <option value="@EagleConnect.Models.SkillCategory.Soft">Soft Skills</option>
                                <option value="@EagleConnect.Models.SkillCategory.Professional">Professional</option>
                                <option value="@EagleConnect.Models.SkillCategory.Other">Other</option>
                            </select>
                            <span asp-validation-for="Skill.Category" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create Skill</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
