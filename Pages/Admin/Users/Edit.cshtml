@page
@model EagleConnect.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-edit"></i> Edit User</h2>
                <a asp-page="/Admin/Users/Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Users
                </a>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">User Information</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.UserModel == null)
                            {
                                <div class="alert alert-danger">User not found.</div>
                            }
                            else
                            {
                            <form method="post">
                                <input type="hidden" asp-for="UserModel!.Id" />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="UserModel!.FirstName" class="form-label"></label>
                                            <input asp-for="UserModel!.FirstName" class="form-control" />
                                            <span asp-validation-for="UserModel!.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="UserModel!.LastName" class="form-label"></label>
                                            <input asp-for="UserModel!.LastName" class="form-control" />
                                            <span asp-validation-for="UserModel!.LastName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UserModel!.Email" class="form-label"></label>
                                    <input asp-for="UserModel!.Email" class="form-control" />
                                    <span asp-validation-for="UserModel!.Email" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="UserModel!.Type" class="form-label"></label>
                                            <select asp-for="UserModel!.Type" class="form-select">
                                                <option value="Student">Student</option>
                                                <option value="Alumni">Alumni</option>
                                                <option value="Faculty">Faculty</option>
                                                <option value="External">External</option>
                                            </select>
                                            <span asp-validation-for="UserModel!.Type" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="UserModel!.Company" class="form-label"></label>
                                            <input asp-for="UserModel!.Company" class="form-control" />
                                            <span asp-validation-for="UserModel!.Company" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="UserModel!.JobTitle" class="form-label"></label>
                                            <input asp-for="UserModel!.JobTitle" class="form-control" />
                                            <span asp-validation-for="UserModel!.JobTitle" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="UserModel!.GraduationYear" class="form-label"></label>
                                            <input asp-for="UserModel!.GraduationYear" class="form-control" />
                                            <span asp-validation-for="UserModel!.GraduationYear" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label asp-for="UserModel!.ProfileImage" class="form-label"></label>
                                            <input asp-for="UserModel!.ProfileImage" class="form-control" />
                                            <span asp-validation-for="UserModel!.ProfileImage" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="UserModel!.Bio" class="form-label"></label>
                                    <textarea asp-for="UserModel!.Bio" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="UserModel!.Bio" class="text-danger"></span>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Save Changes
                                    </button>
                                    <a asp-page="/Admin/Users/Index" class="btn btn-secondary">Cancel</a>
                                </div>
                            </form>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <!-- User Skills -->
                    <div class="card mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Skills</h6>
                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addSkillModal">
                                <i class="fas fa-plus"></i> Add Skill
                            </button>
                        </div>
                        <div class="card-body">
                            @if (Model.UserModel != null && Model.UserModel.UserSkills.Any())
                            {
                                <div class="list-group list-group-flush">
                                    @foreach (var userSkill in Model.UserModel.UserSkills)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                            <div>
                                                <strong>@userSkill.Skill?.Name</strong>
                                                <br>
                                                <small class="text-muted">@userSkill.ProficiencyLevel</small>
                                                @if (!string.IsNullOrEmpty(userSkill.Notes))
                                                {
                                                    <br>
                                                    <small class="text-muted">@userSkill.Notes</small>
                                                }
                                            </div>
                                            <form method="post" asp-page-handler="RemoveSkill" class="d-inline">
                                                <input type="hidden" name="userId" value="@Model.UserModel!.Id" />
                                                <input type="hidden" name="skillId" value="@userSkill.SkillId" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Remove this skill?')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center">No skills assigned</p>
                            }
                        </div>
                    </div>

                    <!-- User Roles -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Roles</h6>
                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addRoleModal">
                                <i class="fas fa-plus"></i> Add Role
                            </button>
                        </div>
                        <div class="card-body">
                            @if (Model.UserRoles.Any())
                            {
                                    <div class="list-group list-group-flush">
                                    @foreach (var role in Model.UserRoles)
                                    {
                                        <div class="list-group-item d-flex justify-content-between align-items-center px-0">
                                            <span class="badge bg-@(role == "Admin" ? "danger" : "secondary")">@role</span>
                                            <form method="post" asp-page-handler="RemoveRole" class="d-inline">
                                                <input type="hidden" name="userId" value="@(Model.UserModel?.Id ?? "")" />
                                                <input type="hidden" name="role" value="@role" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Remove this role?')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted text-center">No roles assigned</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Skill Modal -->
<div class="modal fade" id="addSkillModal" tabindex="-1" aria-labelledby="addSkillModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSkillModalLabel">Add Skill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="AddSkill">
                <div class="modal-body">
                    <input type="hidden" name="userId" value="@(Model.UserModel?.Id ?? "")" />
                    <div class="mb-3">
                        <label for="skillId" class="form-label">Skill</label>
                        <select name="skillId" id="skillId" class="form-select" required>
                            <option value="">Select a skill...</option>
                            @foreach (var skill in Model.AvailableSkills)
                            {
                                <option value="@skill.Id">@skill.Name</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="proficiencyLevel" class="form-label">Proficiency Level</label>
                        <select name="proficiencyLevel" id="proficiencyLevel" class="form-select" required>
                            <option value="Beginner">Beginner</option>
                            <option value="Intermediate">Intermediate</option>
                            <option value="Advanced">Advanced</option>
                            <option value="Expert">Expert</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea name="notes" id="notes" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Skill</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Add Role Modal -->
<div class="modal fade" id="addRoleModal" tabindex="-1" aria-labelledby="addRoleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addRoleModalLabel">Add Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form method="post" asp-page-handler="AddRole">
                <div class="modal-body">
                    <input type="hidden" name="userId" value="@(Model.UserModel?.Id ?? "")" />
                    <div class="mb-3">
                        <label for="role" class="form-label">Role</label>
                        <select name="role" id="role" class="form-select" required>
                            <option value="">Select a role...</option>
                            <option value="Admin">Admin</option>
                            <option value="User">User</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add Role</button>
                </div>
            </form>
        </div>
    </div>
</div>
