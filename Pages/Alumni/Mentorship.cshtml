@page
@using EagleConnect.Models
@model EagleConnect.Pages.Alumni.MentorshipModel
@{
    ViewData["Title"] = "Mentorship Program";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h1 class="display-5 fw-bold text-primary">Alumni Mentorship Program</h1>
                <p class="lead">Connect with experienced alumni who can guide you through your academic and career journey.</p>
            </div>
            @if (Model.CanCreateMentorshipPost())
            {
                <a asp-page="/Posts/Create" asp-route-type="Mentorship" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i> Create Mentorship Post
                </a>
            }
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Active Mentorships</h5>
                </div>
                <div class="card-body">
                    @if (Model.Mentorships.Any())
                    {
                        @foreach (var mentorship in Model.Mentorships.Where(m => m.Status == "Active"))
                        {
                            <div class="border-bottom pb-3 mb-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h6>Mentor: @mentorship.Mentor?.FirstName @mentorship.Mentor?.LastName</h6>
                                        <small class="text-muted">@mentorship.Mentor?.JobTitle at @mentorship.Mentor?.Company</small>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Mentee: @mentorship.Mentee?.FirstName @mentorship.Mentee?.LastName</h6>
                                        @if (mentorship.Mentee?.GraduationYear.HasValue == true && mentorship.Mentee.GraduationYear > 0)
                                        {
                                            <small class="text-muted">Graduation Year: @mentorship.Mentee.GraduationYear.Value</small>
                                        }
                                    </div>
                                </div>
                                <p class="mt-2 mb-0"><small>@mentorship.Notes</small></p>
                                <span class="badge bg-success">@mentorship.Status</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No active mentorships found.</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Available Mentors</h5>
                </div>
                <div class="card-body">
                    @foreach (var mentor in Model.AvailableMentors.Take(5))
                    {
                        <div class="border-bottom pb-2 mb-2">
                            <h6>@mentor.FirstName @mentor.LastName</h6>
                            <small class="text-muted">@mentor.JobTitle at @mentor.Company</small><br>
                            @if (mentor.GraduationYear.HasValue)
                            {
                                <small>Class of @mentor.GraduationYear.Value</small>
                            }
                        </div>
                    }
                    @if (Model.AvailableMentors.Count > 5)
                    {
                        <p class="text-muted">And @(Model.AvailableMentors.Count - 5) more mentors available...</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Mentorship Posts Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-bullhorn"></i> Mentorship Posts</h5>
                    <span class="badge bg-light text-primary">@Model.MentorshipPosts.Count posts</span>
                </div>
                <div class="card-body">
                    @if (Model.MentorshipPosts.Any())
                    {
                        @foreach (var post in Model.MentorshipPosts)
                        {
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h5 class="card-title mb-1">@post.Title</h5>
                                            <p class="card-text mb-2">@post.Description</p>
                                            <small class="text-muted">
                                                <i class="fas fa-user"></i> Posted by @post.Poster?.FirstName @post.Poster?.LastName
                                                <span class="ms-2"><i class="fas fa-calendar"></i> @post.PostedDate.ToString("MMM dd, yyyy")</span>
                                            </small>
                                        </div>
                                        <div>
                                            <span class="badge bg-primary">@post.Type</span>
                                            @if (post.Status == PostStatus.Active)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                        </div>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(post.Location))
                                    {
                                        <p class="mb-1"><small><i class="fas fa-map-marker-alt"></i> @post.Location</small></p>
                                    }
                                    
                                    @if (post.Deadline.HasValue)
                                    {
                                        <p class="mb-2"><small><i class="fas fa-calendar-times"></i> Deadline: @post.Deadline.Value.ToString("MMM dd, yyyy")</small></p>
                                    }
                                    
                                    <div class="d-flex gap-2 mt-2">
                                        @if (Model.CurrentUser != null && post.PosterId != Model.CurrentUser.Id)
                                        {
                                            var isConnected = Model.ConnectionStatuses.ContainsKey(post.PosterId) && Model.ConnectionStatuses[post.PosterId];
                                            var connection = await Model.GetConnectionIdAsync(post.PosterId);
                                            @if (isConnected && connection.HasValue)
                                            {
                                                <a asp-page="/Connections" asp-route-connectionId="@connection.Value" class="btn btn-success btn-sm">
                                                    <i class="fas fa-comments"></i> Chat
                                                </a>
                                            }
                                            else
                                            {
                                                <form method="post" asp-page="/Connections" asp-page-handler="Connect" class="d-inline">
                                                    <input type="hidden" name="userId" value="@post.PosterId" />
                                                    <button type="submit" class="btn btn-primary btn-sm">
                                                        <i class="fas fa-user-plus"></i> Connect
                                                    </button>
                                                </form>
                                            }
                                        }
                                        else if (!string.IsNullOrEmpty(post.ContactInfo))
                                        {
                                            <a href="mailto:@post.ContactInfo" class="btn btn-primary btn-sm">Contact</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No mentorship posts available yet. @(Model.CanCreateMentorshipPost() ? "Be the first to create one!" : "")</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">How Mentorship Works</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <i class="fas fa-search fa-2x text-primary"></i>
                            </div>
                            <h6>1. Find a Mentor</h6>
                            <p class="small">Browse alumni profiles and find someone whose career path interests you.</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <i class="fas fa-envelope fa-2x text-success"></i>
                            </div>
                            <h6>2. Reach Out</h6>
                            <p class="small">Send an email introducing yourself and explaining your goals.</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <i class="fas fa-handshake fa-2x text-warning"></i>
                            </div>
                            <h6>3. Establish Connection</h6>
                            <p class="small">Set up regular meetings and define your mentorship goals.</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="mb-3">
                                <i class="fas fa-chart-line fa-2x text-info"></i>
                            </div>
                            <h6>4. Grow Together</h6>
                            <p class="small">Learn, network, and advance your career with guidance.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
