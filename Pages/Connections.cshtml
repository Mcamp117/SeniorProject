@page
@using EagleConnect.Models
@model EagleConnect.Pages.ConnectionsModel
@{
    ViewData["Title"] = "Connections";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Connections List -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-users"></i> My Connections</h5>
                </div>
                <div class="card-body p-0" style="max-height: calc(100vh - 200px); overflow-y: auto;">
                    <!-- Pending Connections -->
                    @if (Model.PendingConnections.Any())
                    {
                        <div class="p-3 border-bottom bg-light">
                            <h6 class="mb-2"><i class="fas fa-clock"></i> Pending Requests</h6>
                            @foreach (var connection in Model.PendingConnections)
                            {
                                var otherUser = connection.User1Id == Model.CurrentUser?.Id ? connection.User2 : connection.User1;
                                <div class="card mb-2">
                                    <div class="card-body p-2">
                                        <div class="d-flex align-items-center">
                                            <img src="@(otherUser?.ProfileImage ?? "/images/default-avatar.svg")" 
                                                 class="rounded-circle me-2" 
                                                 style="width: 40px; height: 40px; object-fit: cover;" />
                                            <div class="flex-grow-1">
                                                <strong>@otherUser?.FirstName @otherUser?.LastName</strong>
                                                <small class="d-block text-muted">@otherUser?.Email</small>
                                            </div>
                                        </div>
                                        @if (connection.User1Id == Model.CurrentUser?.Id)
                                        {
                                            <small class="text-muted">Waiting for response...</small>
                                        }
                                        else
                                        {
                                            <form method="post" class="d-inline">
                                                <input type="hidden" name="connectionId" value="@connection.Id" />
                                                <button type="submit" asp-page-handler="Accept" class="btn btn-sm btn-success me-1">
                                                    <i class="fas fa-check"></i> Accept
                                                </button>
                                                <button type="submit" asp-page-handler="Decline" class="btn btn-sm btn-danger">
                                                    <i class="fas fa-times"></i> Decline
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Accepted Connections -->
                    <div class="p-3">
                        <h6 class="mb-3"><i class="fas fa-user-friends"></i> Connected (@Model.AcceptedConnections.Count)</h6>
                        @if (Model.AcceptedConnections.Any())
                        {
                            @foreach (var connection in Model.AcceptedConnections)
                            {
                                var otherUser = connection.User1Id == Model.CurrentUser?.Id ? connection.User2 : connection.User1;
                                var lastMessage = connection.Messages.FirstOrDefault();
                                var isSelected = Model.SelectedConnectionId == connection.Id;
                                <a href="?connectionId=@connection.Id" 
                                   class="text-decoration-none @(isSelected ? "text-primary" : "text-dark")">
                                    <div class="card mb-2 @(isSelected ? "border-primary" : "")" style="cursor: pointer;">
                                        <div class="card-body p-2">
                                            <div class="d-flex align-items-center">
                                                <img src="@(otherUser?.ProfileImage ?? "/images/default-avatar.svg")" 
                                                     class="rounded-circle me-2" 
                                                     style="width: 50px; height: 50px; object-fit: cover;" />
                                                <div class="flex-grow-1">
                                                    <strong>@otherUser?.FirstName @otherUser?.LastName</strong>
                                                    @if (lastMessage != null)
                                                    {
                                                        <small class="d-block text-muted">
                                                            @if (lastMessage.Content.Length > 30)
                                                            {
                                                                @lastMessage.Content.Substring(0, 30)@:...
                                                            }
                                                            else
                                                            {
                                                                @lastMessage.Content
                                                            }
                                                        </small>
                                                        <small class="text-muted">@lastMessage.SentAt.ToString("MMM dd, HH:mm")</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="d-block text-muted">No messages yet</small>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center py-4">No connections yet. Start connecting with people!</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Chat Area -->
        <div class="col-md-8">
            @if (Model.SelectedConnection != null)
            {
                var otherUser = Model.SelectedConnection.User1Id == Model.CurrentUser?.Id 
                    ? Model.SelectedConnection.User2 
                    : Model.SelectedConnection.User1;
                
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-light">
                        <div class="d-flex align-items-center">
                            <img src="@(otherUser?.ProfileImage ?? "/images/default-avatar.svg")" 
                                 class="rounded-circle me-2" 
                                 style="width: 40px; height: 40px; object-fit: cover;" />
                            <div>
                                <h6 class="mb-0">@otherUser?.FirstName @otherUser?.LastName</h6>
                                <small class="text-muted">@otherUser?.Email</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-0 d-flex flex-column" style="height: calc(100vh - 300px);">
                        <!-- Messages -->
                        <div id="messages-container" class="flex-grow-1 p-3" style="overflow-y: auto; max-height: calc(100vh - 400px);">
                            @foreach (var message in Model.Messages)
                            {
                                var isOwnMessage = message.SenderId == Model.CurrentUser?.Id;
                                <div class="d-flex mb-3 @(isOwnMessage ? "justify-content-end" : "justify-content-start")">
                                    <div class="message @(isOwnMessage ? "bg-primary text-white" : "bg-light") rounded p-2" 
                                         style="max-width: 70%;">
                                        @if (!isOwnMessage)
                                        {
                                            <small class="d-block mb-1">@message.Sender?.FirstName @message.Sender?.LastName</small>
                                        }
                                        <div>@message.Content</div>
                                        <small class="d-block mt-1 @(isOwnMessage ? "text-white-50" : "text-muted")">
                                            @message.SentAt.ToString("MMM dd, HH:mm")
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Message Input -->
                        <div class="border-top p-3">
                            <form id="message-form" onsubmit="sendMessage(event)">
                                <div class="input-group">
                                    <input type="hidden" id="connection-id" value="@Model.SelectedConnectionId" />
                                    <input type="text" id="message-input" class="form-control" 
                                           placeholder="Type a message..." required />
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-paper-plane"></i> Send
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm h-100">
                    <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 400px;">
                        <div class="text-center text-muted">
                            <i class="fas fa-comments fa-3x mb-3"></i>
                            <h5>Select a connection to start chatting</h5>
                            <p>Choose a connection from the list to view and send messages.</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chathub", {
                accessTokenFactory: () => {
                    // Get auth cookie or token if needed
                    return "";
                }
            })
            .build();

        let currentConnectionId = @(Model.SelectedConnectionId?.ToString() ?? "null");

        connection.start().then(() => {
            console.log("SignalR Connected");
            if (currentConnectionId) {
                connection.invoke("JoinConnection", currentConnectionId);
            }
        }).catch(err => console.error(err));

        connection.on("ReceiveMessage", (message) => {
            if (message.connectionId === currentConnectionId) {
                addMessageToUI(message);
            }
        });

        connection.on("NewMessageNotification", (connectionId) => {
            // Refresh page or show notification
            if (connectionId !== currentConnectionId) {
                // Show notification badge or update connection list
            }
        });

        function sendMessage(event) {
            event.preventDefault();
            const messageInput = document.getElementById('message-input');
            const content = messageInput.value.trim();
            
            if (!content || !currentConnectionId) return;

            connection.invoke("SendMessage", currentConnectionId, content)
                .then(() => {
                    messageInput.value = '';
                })
                .catch(err => {
                    console.error(err);
                    alert('Error sending message');
                });
        }

        function addMessageToUI(message) {
            const container = document.getElementById('messages-container');
            const isOwnMessage = message.senderId === '@Model.CurrentUser?.Id';
            
            const messageDiv = document.createElement('div');
            messageDiv.className = `d-flex mb-3 ${isOwnMessage ? 'justify-content-end' : 'justify-content-start'}`;
            messageDiv.innerHTML = `
                <div class="message ${isOwnMessage ? 'bg-primary text-white' : 'bg-light'} rounded p-2" style="max-width: 70%;">
                    ${!isOwnMessage ? `<small class="d-block mb-1">${message.senderName}</small>` : ''}
                    <div>${escapeHtml(message.content)}</div>
                    <small class="d-block mt-1 ${isOwnMessage ? 'text-white-50' : 'text-muted'}">
                        ${new Date(message.sentAt).toLocaleString()}
                    </small>
                </div>
            `;
            
            container.appendChild(messageDiv);
            container.scrollTop = container.scrollHeight;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Auto-scroll to bottom on load
        window.addEventListener('load', () => {
            const container = document.getElementById('messages-container');
            if (container) {
                container.scrollTop = container.scrollHeight;
            }
        });
    </script>
}

