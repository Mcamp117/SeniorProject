@page
@model EagleConnect.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="text-center mb-5">
                <h1 class="fw-bold mb-3">Contact Us</h1>
                <p class="lead text-muted">Have questions, feedback, or need assistance? We're here to help!</p>
            </div>

            <div class="row g-4">
                <!-- Contact Form -->
                <div class="col-lg-7">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <h2 class="h4 fw-bold mb-4">Send Us a Message</h2>
                            
                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success">
                                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                                </div>
                            }

                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Input.Name" class="form-label">Your Name <span class="text-danger">*</span></label>
                                        <input asp-for="Input.Name" class="form-control" placeholder="John Doe" />
                                        <span asp-validation-for="Input.Name" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Input.Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                                        <input asp-for="Input.Email" class="form-control" type="email" placeholder="you@usi.edu" />
                                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mt-3">
                                    <label asp-for="Input.Subject" class="form-label">Subject <span class="text-danger">*</span></label>
                                    <select asp-for="Input.Subject" class="form-select">
                                        <option value="">Select a topic...</option>
                                        <option value="General Inquiry">General Inquiry</option>
                                        <option value="Account Issues">Account Issues</option>
                                        <option value="Technical Support">Technical Support</option>
                                        <option value="Feature Request">Feature Request</option>
                                        <option value="Report a Bug">Report a Bug</option>
                                        <option value="Report a User">Report a User</option>
                                        <option value="Partnership Inquiry">Partnership Inquiry</option>
                                        <option value="Other">Other</option>
                                    </select>
                                    <span asp-validation-for="Input.Subject" class="text-danger small"></span>
                                </div>

                                <div class="mt-3">
                                    <label asp-for="Input.Message" class="form-label">Message <span class="text-danger">*</span></label>
                                    <textarea asp-for="Input.Message" class="form-control" rows="6" placeholder="Please describe your question or concern in detail..."></textarea>
                                    <span asp-validation-for="Input.Message" class="text-danger small"></span>
                                </div>

                                <div class="mt-4">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="fas fa-paper-plane me-2"></i> Send Message
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="col-lg-5">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-4">
                            <h3 class="h5 fw-bold mb-4">Other Ways to Reach Us</h3>
                            
                            <div class="d-flex align-items-start mb-4">
                                <div class="feature-icon navy flex-shrink-0 me-3" style="width: 50px; height: 50px; min-width: 50px; font-size: 1.2rem;">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h4 class="h6 fw-bold mb-1">Email</h4>
                                    <a href="mailto:eagleconnect@usi.edu" class="text-decoration-none d-block">eagleconnect@usi.edu</a>
                                    <p class="text-muted small mb-0">We respond within 1-2 business days</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start mb-4">
                                <div class="feature-icon red flex-shrink-0 me-3" style="width: 50px; height: 50px; min-width: 50px; font-size: 1.2rem;">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h4 class="h6 fw-bold mb-1">Location</h4>
                                    <p class="mb-0">University of Southern Indiana</p>
                                    <p class="text-muted small mb-0">8600 University Blvd, Evansville, IN 47712</p>
                                </div>
                            </div>

                            <div class="d-flex align-items-start">
                                <div class="feature-icon gold flex-shrink-0 me-3" style="width: 50px; height: 50px; min-width: 50px; font-size: 1.2rem;">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h4 class="h6 fw-bold mb-1">Support Hours</h4>
                                    <p class="mb-0">Monday - Friday</p>
                                    <p class="text-muted small mb-0">9:00 AM - 5:00 PM EST</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <h3 class="h5 fw-bold mb-3">Quick Resources</h3>
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <a asp-page="/Help" class="text-decoration-none">
                                        <i class="fas fa-question-circle me-2" style="color: #FCB643;"></i> Help Center & FAQs
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-page="/Privacy" class="text-decoration-none">
                                        <i class="fas fa-shield-alt me-2" style="color: #FCB643;"></i> Privacy Policy
                                    </a>
                                </li>
                                <li class="mb-2">
                                    <a asp-page="/Terms" class="text-decoration-none">
                                        <i class="fas fa-file-contract me-2" style="color: #FCB643;"></i> Terms of Service
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.usi.edu" target="_blank" class="text-decoration-none">
                                        <i class="fas fa-external-link-alt me-2" style="color: #FCB643;"></i> USI Main Website
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

