@page "/home"
@model IndexModel
@{
    ViewData["Title"] = "Eagle Connect - Home";
}

<div class="container">
    @if (Model.IsLoggedIn)
    {
        <!-- Welcome Message for Authenticated Users -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-success" role="alert">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="alert-heading">Welcome back, @(Model.CurrentUser?.FirstName ?? User.Identity?.Name)!</h4>
                            <p class="mb-0">You're now connected to the EagleConnect community. Explore opportunities, connect with alumni, and grow your network.</p>
                        </div>
                        <div>
                            <a asp-page="/Posts/Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Create Post
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Connection Posts Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2 class="h4 fw-bold">Active Connection Posts</h2>
                    <span class="badge bg-primary">@Model.ActiveConnectionPosts.Count posts</span>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var post in Model.ActiveConnectionPosts)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card h-100 connection-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-1">@post.Title</h5>
                                <div>
                                    <span class="badge bg-primary">@post.Type</span>
                                    <span class="badge bg-success">@post.Seeking</span>
                                </div>
                            </div>
                            <p class="card-text text-muted mb-2">
                                <i class="fas fa-map-marker-alt me-1"></i>@post.Location
                            </p>
                            <p class="card-text">@post.Description</p>
                            
                            @if (!string.IsNullOrEmpty(post.Skills))
                            {
                                var skills = post.Skills.Split(',', StringSplitOptions.RemoveEmptyEntries).Select(s => s.Trim()).ToList();
                                if (skills.Any())
                                {
                                    <div class="mb-2">
                                        <small class="text-muted"><strong>Skills:</strong></small>
                                        @foreach (var skill in skills.Take(3))
                                        {
                                            <span class="badge bg-secondary me-1">@skill</span>
                                        }
                                        @if (skills.Count > 3)
                                        {
                                            <span class="badge bg-light text-dark">+@(skills.Count - 3) more</span>
                                        }
                                    </div>
                                }
                            }
                            
                            @if (!string.IsNullOrEmpty(post.Requirements))
                            {
                                var reqs = post.Requirements.Split(',', StringSplitOptions.RemoveEmptyEntries).Select(r => r.Trim()).ToList();
                                if (reqs.Any())
                                {
                                    <div class="mb-3">
                                        <small class="text-muted"><strong>Requirements:</strong></small>
                                        <ul class="small mb-0 mt-1">
                                            @foreach (var req in reqs.Take(2))
                                            {
                                                <li>@req</li>
                                            }
                                            @if (reqs.Count > 2)
                                            {
                                                <li><em>+@(reqs.Count - 2) more requirements</em></li>
                                            }
                                        </ul>
                                    </div>
                                }
                            }
                            
                            <div class="mb-3">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>Posted @post.PostedDate.ToString("MMM dd")
                                    @if (post.Deadline.HasValue)
                                    {
                                        <span class="ms-3"><i class="fas fa-calendar me-1"></i>Deadline @post.Deadline.Value.ToString("MMM dd")</span>
                                    }
                                </small>
                            </div>
                            
                            <div class="d-flex gap-2">
                                <a href="mailto:@post.ContactInfo" class="btn btn-primary btn-sm">Connect</a>
                                <button class="btn btn-outline-secondary btn-sm" disabled>Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Quick Stats -->
        <div class="row mt-5 mb-5">
            <div class="col-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <h4 class="text-primary">@Model.TotalUsers</h4>
                                <small class="text-muted">Total Users</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-success">@Model.TotalAlumni</h4>
                                <small class="text-muted">Alumni</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-info">@Model.TotalStudents</h4>
                                <small class="text-muted">Students</small>
                            </div>
                            <div class="col-md-3">
                                <h4 class="text-warning">@Model.ActiveRelationships</h4>
                                <small class="text-muted">Active Connections</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Welcome Message for Anonymous Users -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="jumbotron bg-primary text-white p-5 rounded">
                    <h1 class="display-4">Welcome to EagleConnect</h1>
                    <p class="lead">Connect with alumni, find mentors, and grow your professional network.</p>
                    <hr class="my-4">
                    <p>Join our community of students, alumni, and professionals to unlock new opportunities.</p>
                    <div class="d-flex gap-2">
                        <a class="btn btn-light btn-lg" asp-page="/Account/Register" role="button">Get Started</a>
                        <a class="btn btn-outline-light btn-lg" asp-page="/Account/Login" role="button">Sign In</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features for Anonymous Users -->
        <div class="row mb-5">
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Connect with Alumni</h5>
                        <p class="card-text">Find mentors and build professional relationships with successful alumni.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-briefcase fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Career Opportunities</h5>
                        <p class="card-text">Discover job opportunities, internships, and career guidance from industry professionals.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="fas fa-graduation-cap fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Academic Support</h5>
                        <p class="card-text">Get study groups, academic advice, and connect with peers in your field.</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
