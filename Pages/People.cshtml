@page
@model EagleConnect.Pages.PeopleModel
@{
    ViewData["Title"] = "Browse People";
}

<div class="container">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-2">
                <span class="badge bg-navy me-2 px-3 py-2">
                    <i class="fas fa-users me-1"></i> Directory
                </span>
            </div>
            <h1 class="display-6 fw-bold text-navy mb-2">Browse People</h1>
            <p class="lead text-muted mb-0">Connect with students, alumni, faculty, and professionals in the USI community.</p>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-body p-4">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-lg-4 col-md-6">
                    <label for="search" class="form-label">
                        <i class="fas fa-search text-muted me-1"></i> Search
                    </label>
                    <input type="text" class="form-control" id="search" name="search" value="@Model.SearchTerm" placeholder="Name, company, skills, bio...">
                </div>
                <div class="col-lg-3 col-md-6">
                    <label for="type" class="form-label">
                        <i class="fas fa-user-tag text-muted me-1"></i> User Type
                    </label>
                    <select class="form-select" id="type" name="type">
                        <option value="">All Types</option>
                        <option value="Student" selected="@(Model.SelectedType == "Student")">üéì Students</option>
                        <option value="Alumni" selected="@(Model.SelectedType == "Alumni")">ü¶Ö Alumni</option>
                        <option value="Faculty" selected="@(Model.SelectedType == "Faculty")">üë®‚Äçüè´ Faculty</option>
                        <option value="External" selected="@(Model.SelectedType == "External")">üíº External</option>
                    </select>
                </div>
                <div class="col-lg-3 col-md-6">
                    <label for="skill" class="form-label">
                        <i class="fas fa-tags text-muted me-1"></i> Skill
                    </label>
                    <select class="form-select" id="skill" name="skill">
                        <option value="">All Skills</option>
                        @foreach (var skill in Model.AvailableSkills)
                        {
                            <option value="@skill.Id" selected="@(Model.SelectedSkill == skill.Id.ToString())">@skill.Name</option>
                        }
                    </select>
                </div>
                <div class="col-lg-2 col-md-6">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search me-1"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Summary -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <h3 class="h5 mb-0 text-navy fw-bold">
                <i class="fas fa-user-friends text-gold me-2"></i>
                @Model.FilteredUsers.Count people found
            </h3>
        </div>
        @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SelectedType) || !string.IsNullOrEmpty(Model.SelectedSkill))
        {
            <a asp-page="/People" class="btn btn-outline-secondary btn-sm">
                <i class="fas fa-times me-1"></i> Clear Filters
            </a>
        }
    </div>

    <!-- People Grid -->
    <div class="row g-4">
        @foreach (var user in Model.FilteredUsers)
        {
            <div class="col-lg-4 col-md-6">
                <div class="card h-100 person-card">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-start mb-3">
                            @if (!string.IsNullOrEmpty(user.ProfileImage))
                            {
                                <img src="@user.ProfileImage" alt="@user.FirstName @user.LastName" class="avatar avatar-lg me-3" style="object-fit: cover;">
                            }
                            else
                            {
                                <div class="avatar-placeholder avatar-lg me-3">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                            <div class="flex-grow-1 min-width-0">
                                <h5 class="card-title mb-1 text-navy fw-bold">@user.FirstName @user.LastName</h5>
                                <div class="mb-1">
                                    @if (user.Type == EagleConnect.Models.UserType.Student)
                                    {
                                        <span class="badge bg-primary">üéì Student</span>
                                    }
                                    else if (user.Type == EagleConnect.Models.UserType.Alumni)
                                    {
                                        @if (user.GraduationYear.HasValue && user.GraduationYear > 0)
                                        {
                                            <span class="badge bg-success">ü¶Ö Alumni '@user.GraduationYear.Value</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">ü¶Ö Alumni</span>
                                        }
                                    }
                                    else if (user.Type == EagleConnect.Models.UserType.Faculty)
                                    {
                                        <span class="badge bg-info">üë®‚Äçüè´ Faculty</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">üíº External</span>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(user.JobTitle) && !string.IsNullOrEmpty(user.Company))
                                {
                                    <p class="card-text small text-muted mb-0">
                                        <strong>@user.JobTitle</strong> at @user.Company
                                    </p>
                                }
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(user.Bio))
                        {
                            <p class="card-text small text-muted mb-3" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                @user.Bio
                            </p>
                        }
                        
                        @{ var skillNames = user.UserSkills.Select(us => us.Skill!.Name).ToList(); }
                        @if (skillNames.Any())
                        {
                            <div class="mb-3">
                                @foreach (var s in skillNames.Take(3))
                                {
                                    <span class="badge bg-secondary me-1 mb-1">@s</span>
                                }
                                @if (skillNames.Count > 3)
                                {
                                    <span class="badge bg-light text-dark">+@(skillNames.Count - 3)</span>
                                }
                            </div>
                        }
                        
                        <div class="d-flex gap-2 pt-3 border-top">
                            <a href="mailto:@user.Email" class="btn btn-outline-primary btn-sm flex-grow-1">
                                <i class="fas fa-envelope me-1"></i> Email
                            </a>
                            @if (Model.CurrentUser != null && user.Id != Model.CurrentUser.Id)
                            {
                                var isConnected = Model.ConnectionStatuses.ContainsKey(user.Id) && Model.ConnectionStatuses[user.Id];
                                var connection = await Model.GetConnectionIdAsync(user.Id);
                                @if (isConnected && connection.HasValue)
                                {
                                    <a asp-page="/Connections" asp-route-connectionId="@connection.Value" class="btn btn-success btn-sm flex-grow-1">
                                        <i class="fas fa-comments me-1"></i> Chat
                                    </a>
                                }
                                else
                                {
                                    <form method="post" asp-page="/Connections" asp-page-handler="Connect" class="flex-grow-1">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="btn btn-primary btn-sm w-100">
                                            <i class="fas fa-user-plus me-1"></i> Connect
                                        </button>
                                    </form>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.FilteredUsers.Any())
    {
        <div class="card border-0">
            <div class="card-body text-center py-5">
                <div class="feature-icon navy mb-4 mx-auto">
                    <i class="fas fa-search"></i>
                </div>
                <h4 class="text-navy mb-2">No people found</h4>
                <p class="text-muted mb-4">Try adjusting your search criteria or filters.</p>
                <a asp-page="/People" class="btn btn-primary">
                    <i class="fas fa-redo me-1"></i> Clear Filters
                </a>
            </div>
        </div>
    }
</div>
