<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EagleConnect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EagleConnect.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="@(User.Identity?.IsAuthenticated == true ? "/Index" : "/Welcome")">EagleConnect</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/home">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="postsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-bullhorn"></i> Posts
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="postsDropdown">
                                    <li><a class="dropdown-item" asp-page="/Posts/Index"><i class="fas fa-list"></i> All Posts</a></li>
                                    <li><a class="dropdown-item" asp-page="/Posts/Create"><i class="fas fa-plus"></i> Create Post</a></li>
                                    <li><a class="dropdown-item" asp-page="/Posts/MyPosts"><i class="fas fa-user"></i> My Posts</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/People">Browse People</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Connections">
                                    <i class="fas fa-comments"></i> Connections
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Organizations">Organizations</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="alumniDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Alumni/Student
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="alumniDropdown">
                                    <li><a class="dropdown-item" asp-page="/Alumni/Index">Alumni Directory & Networking</a></li>
                                    <li><a class="dropdown-item" asp-page="/Alumni/Mentorship">Mentorship Program</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="externalDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    External Users
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="externalDropdown">
                                    <li><a class="dropdown-item" asp-page="/External/Index">External Mentors</a></li>
                                    <li><a class="dropdown-item" asp-page="/External/Employers">Employers</a></li>
                                </ul>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cog"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li><a class="dropdown-item" asp-page="/Admin/Index"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Users/Index"><i class="fas fa-user-cog"></i> User Management</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Skills/Index"><i class="fas fa-tags"></i> Skills</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Organizations/Index"><i class="fas fa-users"></i> Organizations</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Relationships/Index"><i class="fas fa-handshake"></i> Relationships</a></li>
                                        <li><a class="dropdown-item" asp-page="/Admin/Posts/Index"><i class="fas fa-bullhorn"></i> Connection Posts</a></li>
                                    </ul>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Welcome">Home</a>
                            </li>
                        </ul>
                    }
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fas fa-user"></i> @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-page="/Account/Profile"><i class="fas fa-user-circle"></i> Profile</a></li>
                                    <li><a class="dropdown-item" href="#"><i class="fas fa-cog"></i> Settings</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-page="/Account/Logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Login">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5 mb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container py-4">
            &copy; 2025 - EagleConnect - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>