@page
@model EagleConnect.Pages.WelcomeModel
@{
    ViewData["Title"] = "Welcome to EagleConnect";
    Layout = "~/Pages/Shared/_PublicLayout.cshtml";
}

<div class="hero-section text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Connect. Grow. Succeed.</h1>
                <p class="lead mb-4">Join EagleConnect, the premier networking platform connecting students, alumni, and professionals. Build meaningful relationships that last a lifetime.</p>
                <div class="d-flex gap-3">
                    <a asp-page="/Account/Register" class="btn btn-light btn-lg px-4">Get Started Free</a>
                    <a asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-4">Sign In</a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <i class="fas fa-users fa-10x opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="container mb-5">
    <div class="row text-center">
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-user-graduate fa-3x text-primary mb-3"></i>
                    <h3 class="text-primary fw-bold">@Model.TotalUsers+</h3>
                    <p class="text-muted mb-0">Active Members</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-handshake fa-3x text-success mb-3"></i>
                    <h3 class="text-success fw-bold">@Model.ActiveConnections+</h3>
                    <p class="text-muted mb-0">Successful Connections</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-building fa-3x text-info mb-3"></i>
                    <h3 class="text-info fw-bold">@Model.TotalOrganizations+</h3>
                    <p class="text-muted mb-0">Organizations</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <i class="fas fa-briefcase fa-3x text-warning mb-3"></i>
                    <h3 class="text-warning fw-bold">@Model.JobOpportunities+</h3>
                    <p class="text-muted mb-0">Job Opportunities</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2 class="display-5 fw-bold">Why Choose EagleConnect?</h2>
            <p class="lead text-muted">Discover the features that make us the leading networking platform</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-network-wired fa-4x text-primary mb-3"></i>
                    <h4 class="fw-bold">Professional Networking</h4>
                    <p class="text-muted">Connect with alumni, industry professionals, and peers to expand your professional network and unlock new opportunities.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-user-tie fa-4x text-success mb-3"></i>
                    <h4 class="fw-bold">Mentorship Programs</h4>
                    <p class="text-muted">Find mentors who can guide your career path or become a mentor to help others grow and develop professionally.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <i class="fas fa-chart-line fa-4x text-info mb-3"></i>
                    <h4 class="fw-bold">Career Development</h4>
                    <p class="text-muted">Access exclusive job opportunities, internships, and career resources shared by our community members.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Success Stories -->
<div class="bg-light py-5 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="display-5 fw-bold">Success Stories</h2>
                <p class="lead text-muted">See how EagleConnect has helped our members achieve their goals</p>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">Sarah Johnson</h6>
                                <small class="text-muted">Software Engineer at Google</small>
                            </div>
                        </div>
                        <p class="text-muted">"EagleConnect helped me land my dream job at Google. Through the platform, I connected with an alum who referred me and provided invaluable interview guidance."</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">Michael Chen</h6>
                                <small class="text-muted">Investment Banker at Goldman Sachs</small>
                            </div>
                        </div>
                        <p class="text-muted">"The mentorship program changed my career trajectory. My mentor provided insights that helped me transition from engineering to finance successfully."</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card h-100 border-0 shadow">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold">Emily Rodriguez</h6>
                                <small class="text-muted">Startup Founder</small>
                            </div>
                        </div>
                        <p class="text-muted">"I found my co-founder and initial investors through EagleConnect. The platform's diverse community was instrumental in launching my startup."</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            <div class="card bg-primary text-white">
                <div class="card-body text-center py-5">
                    <h2 class="display-5 fw-bold mb-3">Ready to Start Your Journey?</h2>
                    <p class="lead mb-4">Join thousands of professionals who are already building their networks on EagleConnect</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a asp-page="/Account/Register" class="btn btn-light btn-lg px-5">Create Your Account</a>
                        <a asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-5">Sign In</a>
                    </div>
                    <small class="mt-3 d-block">Free to join</small>
                </div>
            </div>
        </div>
    </div>
</div>
