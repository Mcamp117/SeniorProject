@page
@model EagleConnect.Pages.WelcomeModel
@{
    ViewData["Title"] = "Welcome to EagleConnect";
    Layout = "~/Pages/Shared/_PublicLayout.cshtml";
}

<!-- Hero Section -->
<div class="hero-section text-white py-5 mb-5">
    <div class="container position-relative" style="z-index: 1;">
        <div class="row align-items-center py-4">
            <div class="col-lg-7">
                <span class="badge bg-gold text-navy mb-3 px-3 py-2" style="font-size: 0.85rem;">
                    <i class="fas fa-graduation-cap me-1"></i> University of Southern Indiana
                </span>
                <h1 class="display-3 fw-bold mb-4" style="line-height: 1.1;">
                    Connect. Grow.<br>
                    <span style="color: var(--usi-gold);">Succeed.</span>
                </h1>
                <p class="lead mb-4 opacity-90" style="font-size: 1.25rem;">
                    Join EagleConnect, the premier networking platform connecting USI students, alumni, and professionals. Build meaningful relationships that last a lifetime.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3">
                    <a asp-page="/Account/Register" class="btn btn-gold btn-lg px-5 py-3">
                        <i class="fas fa-rocket me-2"></i> Get Started Free
                    </a>
                    <a asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-5 py-3">
                        <i class="fas fa-sign-in-alt me-2"></i> Sign In
                    </a>
                </div>
            </div>
            <div class="col-lg-5 text-center d-none d-lg-block">
                <div class="position-relative">
                    <i class="fas fa-users" style="font-size: 12rem; opacity: 0.15;"></i>
                    <div class="position-absolute top-50 start-50 translate-middle">
                        <div class="d-flex flex-column align-items-center">
                            <span style="font-size: 5rem;">ðŸ¦…</span>
                            <span class="text-gold fw-bold mt-2" style="font-size: 1.5rem;">Go Eagles!</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-6 col-lg-3">
            <div class="card h-100 text-center stat-card navy">
                <div class="card-body py-4">
                    <div class="feature-icon navy mb-3 mx-auto" style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h3 class="text-navy mb-1">@Model.TotalUsers+</h3>
                    <p class="text-muted mb-0 small fw-medium">Active Members</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card h-100 text-center stat-card red">
                <div class="card-body py-4">
                    <div class="feature-icon red mb-3 mx-auto" style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-handshake"></i>
                    </div>
                    <h3 class="text-danger mb-1">@Model.ActiveConnections+</h3>
                    <p class="text-muted mb-0 small fw-medium">Connections Made</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card h-100 text-center stat-card blue">
                <div class="card-body py-4">
                    <div class="feature-icon blue mb-3 mx-auto" style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-building"></i>
                    </div>
                    <h3 class="text-info mb-1">@Model.TotalOrganizations+</h3>
                    <p class="text-muted mb-0 small fw-medium">Organizations</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-lg-3">
            <div class="card h-100 text-center stat-card gold">
                <div class="card-body py-4">
                    <div class="feature-icon gold mb-3 mx-auto" style="width: 60px; height: 60px; font-size: 1.5rem;">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <h3 class="text-warning mb-1">@Model.JobOpportunities+</h3>
                    <p class="text-muted mb-0 small fw-medium">Job Opportunities</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <span class="badge bg-light-blue text-navy px-3 py-2 mb-3">Why EagleConnect?</span>
            <h2 class="display-5 fw-bold text-navy mb-3">Empowering Your Professional Journey</h2>
            <p class="lead text-muted mx-auto" style="max-width: 600px;">Discover the features that make us the leading networking platform for the USI community</p>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card h-100 border-0">
                <div class="card-body text-center p-4">
                    <div class="feature-icon navy mb-4">
                        <i class="fas fa-network-wired"></i>
                    </div>
                    <h4 class="fw-bold text-navy">Professional Networking</h4>
                    <p class="text-muted mb-0">Connect with alumni, industry professionals, and peers to expand your professional network and unlock new opportunities.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100 border-0">
                <div class="card-body text-center p-4">
                    <div class="feature-icon red mb-4">
                        <i class="fas fa-user-tie"></i>
                    </div>
                    <h4 class="fw-bold text-navy">Mentorship Programs</h4>
                    <p class="text-muted mb-0">Find mentors who can guide your career path or become a mentor to help others grow and develop professionally.</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100 border-0">
                <div class="card-body text-center p-4">
                    <div class="feature-icon gold mb-4">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h4 class="fw-bold text-navy">Career Development</h4>
                    <p class="text-muted mb-0">Access exclusive job opportunities, internships, and career resources shared by our community members.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Success Stories -->
<div class="py-5 mb-5" style="background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);">
    <div class="container">
        <div class="row mb-5">
            <div class="col-12 text-center">
                <span class="badge bg-navy px-3 py-2 mb-3">Success Stories</span>
                <h2 class="display-5 fw-bold text-navy mb-3">Hear From Our Community</h2>
                <p class="lead text-muted mx-auto" style="max-width: 600px;">See how EagleConnect has helped our members achieve their goals</p>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="card h-100 border-0">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            <div class="avatar-placeholder avatar-lg me-3" style="background: linear-gradient(135deg, var(--usi-navy) 0%, var(--usi-medium-blue) 100%);">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold text-navy">Sarah Johnson</h6>
                                <small class="text-muted">Software Engineer at Google</small>
                            </div>
                        </div>
                        <p class="text-muted mb-3">"EagleConnect helped me land my dream job at Google. Through the platform, I connected with an alum who referred me and provided invaluable interview guidance."</p>
                        <div class="d-flex gap-1">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card h-100 border-0">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            <div class="avatar-placeholder avatar-lg me-3" style="background: linear-gradient(135deg, var(--usi-red) 0%, #e8213f 100%);">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold text-navy">Michael Chen</h6>
                                <small class="text-muted">Investment Banker at Goldman Sachs</small>
                            </div>
                        </div>
                        <p class="text-muted mb-3">"The mentorship program changed my career trajectory. My mentor provided insights that helped me transition from engineering to finance successfully."</p>
                        <div class="d-flex gap-1">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card h-100 border-0">
                    <div class="card-body p-4">
                        <div class="d-flex align-items-center mb-4">
                            <div class="avatar-placeholder avatar-lg me-3" style="background: linear-gradient(135deg, var(--usi-gold) 0%, var(--usi-gold-dark) 100%);">
                                <i class="fas fa-user" style="color: var(--usi-navy);"></i>
                            </div>
                            <div>
                                <h6 class="mb-0 fw-bold text-navy">Emily Rodriguez</h6>
                                <small class="text-muted">Startup Founder</small>
                            </div>
                        </div>
                        <p class="text-muted mb-3">"I found my co-founder and initial investors through EagleConnect. The platform's diverse community was instrumental in launching my startup."</p>
                        <div class="d-flex gap-1">
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                            <i class="fas fa-star text-warning"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Call to Action -->
<div class="container mb-5">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 overflow-hidden" style="background: linear-gradient(135deg, var(--usi-navy) 0%, var(--usi-navy-dark) 100%);">
                <div class="card-body text-center py-5 px-4 position-relative">
                    <div class="position-absolute top-0 end-0 w-50 h-100 d-none d-md-block" style="background: url(&quot;data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ccircle cx='80' cy='20' r='30' fill='none' stroke='%23FCB643' stroke-width='0.5' opacity='0.3'/%3E%3Ccircle cx='90' cy='70' r='20' fill='none' stroke='%238ED8F8' stroke-width='0.5' opacity='0.2'/%3E%3C/svg%3E&quot;); background-size: cover;"></div>
                    <div class="position-relative" style="z-index: 1;">
