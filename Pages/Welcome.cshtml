                        <div class="d-flex flex-column flex-sm-row justify-content-center gap-3">
                            <a asp-page="/Account/Register" class="btn btn-gold btn-lg px-5">
                                <i class="fas fa-user-plus me-2"></i> Create Your Account
                            </a>
                            <a asp-page="/Account/Login" class="btn btn-outline-light btn-lg px-5">
                                <i class="fas fa-sign-in-alt me-2"></i> Sign In
                            </a>
                        </div>
                        <p class="text-white-50 small mt-4 mb-0">
                            <i class="fas fa-check-circle me-1"></i> Free to join &bull;
                            <i class="fas fa-shield-alt me-1 ms-2"></i> Secure &bull;
                            <i class="fas fa-users me-1 ms-2"></i> USI Community Only
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
